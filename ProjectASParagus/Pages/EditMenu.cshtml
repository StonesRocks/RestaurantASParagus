@page
@model ProjectASParagus.Pages.EditMenuModel
@using System.IO;
@{
    ViewData["Title"] = "Edit Menu";
}

<form method="post">
<div class="container col-8 div-primary">
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Menu name</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Hamburgers with..." required>
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Price</label>
            <input type="number" class="form-control" required min="0">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Description of the dish</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" required></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label"> Upload Image</label>
        <input id="fileInput" type="file" name="file" class="form-control" />
    </div>
    <div class="d-flex justify-content-center">
    <button type="submit" class="btn btn-primary col-6">Submit</button>
</div>
</form>

<!--This displays that the item already exists using its id-->
@if(Model.itemExists == true)
{
    <div class="container alert-danger py-3" role="alert">
        @Model.errorMessages
    </div>
}